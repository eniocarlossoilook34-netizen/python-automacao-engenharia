import numpy as np
import matplotlib.pyplot as plt
from tqdm import tqdm 

# --- 1. PAR√ÇMETROS DA SIMULA√á√ÉO (O LABORAT√ìRIO) ---
nx = 81          # Pontos na dire√ß√£o X
ny = 41          # Pontos na dire√ß√£o Y
nt = 500         # N√∫mero de passos de tempo (Frames)
nit = 50         # Itera√ß√µes para resolver a press√£o (Quanto maior, mais preciso e lento)
c = 1            # Velocidade base
dx = 2 / (nx - 1)
dy = 2 / (ny - 1)
rho = 1          # Densidade do ar
nu = 0.1         # Viscosidade (Tente 0.01 para mais turbul√™ncia, mas pode instabilizar)
dt = .001        # Passo de tempo (Precisa ser muito pequeno para n√£o explodir)

# Inicializa√ß√£o dos campos (u=X, v=Y, p=Press√£o, b=Termo Fonte)
u = np.zeros((ny, nx))
v = np.zeros((ny, nx))
p = np.zeros((ny, nx)) 
b = np.zeros((ny, nx))

# --- 2. FUN√á√ÉO: O MOTOR DA PRESS√ÉO (POISSON SOLVER) ---
def build_up_b(b, rho, dt, u, v, dx, dy):
    # Esta fun√ß√£o calcula o "Erro de Massa" que a press√£o precisa corrigir
    # Usa slicing do NumPy para ser r√°pido (sem loops for lentos)
    b[1:-1, 1:-1] = (rho * (1 / dt * ((u[1:-1, 2:] - u[1:-1, 0:-2]) / (2 * dx) + 
                     (v[2:, 1:-1] - v[0:-2, 1:-1]) / (2 * dy)) -
                    ((u[1:-1, 2:] - u[1:-1, 0:-2]) / (2 * dx))**2 -
                    2 * ((u[2:, 1:-1] - u[0:-2, 1:-1]) / (2 * dy) *
                         (v[1:-1, 2:] - v[1:-1, 0:-2]) / (2 * dx)) -
                    ((v[2:, 1:-1] - v[0:-2, 1:-1]) / (2 * dy))**2))
    return b

def pressure_poisson(p, dx, dy, b):
    # Resolve a equa√ß√£o de Laplace/Poisson iterativamente (M√©todo de Jacobi)
    pn = np.empty_like(p)
    
    for q in range(nit):
        pn = p.copy()
        p[1:-1, 1:-1] = (((pn[1:-1, 2:] + pn[1:-1, 0:-2]) * dy**2 + 
                          (pn[2:, 1:-1] + pn[0:-2, 1:-1]) * dx**2) /
                          (2 * (dx**2 + dy**2)) -
                          dx**2 * dy**2 / (2 * (dx**2 + dy**2)) * b[1:-1, 1:-1])

        # Condi√ß√µes de Contorno da Press√£o (Paredes)
        p[:, -1] = p[:, -2] # Sa√≠da (dp/dx = 0)
        p[0, :] = p[1, :]   # Parede baixo (dp/dy = 0)
        p[-1, :] = p[-2, :] # Parede cima (dp/dy = 0)
        p[:, 0] = p[:, 1]   # Entrada (dp/dx = 0)
        
    return p

# --- 3. LOOP PRINCIPAL (A SIMULA√á√ÉO) ---
print("üå™Ô∏è Iniciando Solver Navier-Stokes (Isso √© CFD de verdade)...")

# Arrays para guardar o hist√≥rico para anima√ß√£o (opcional)
historico_u = []
historico_v = []

for n in tqdm(range(nt)):
    un = u.copy()
    vn = v.copy()
    
    # 1. Calcula o Termo Fonte da Press√£o
    b = build_up_b(b, rho, dt, u, v, dx, dy)
    
    # 2. Resolve a Press√£o
    p = pressure_poisson(p, dx, dy, b)
    
    # 3. Equa√ß√µes de Momentum (Navier-Stokes)
    # Atualiza U (Velocidade X)
    u[1:-1, 1:-1] = (un[1:-1, 1:-1]-
                     un[1:-1, 1:-1] * dt / dx *
                    (un[1:-1, 1:-1] - un[1:-1, 0:-2]) -
                     vn[1:-1, 1:-1] * dt / dy *
                    (un[1:-1, 1:-1] - un[0:-2, 1:-1]) -
                     dt / (2 * rho * dx) * (p[1:-1, 2:] - p[1:-1, 0:-2]) +
                     nu * (dt / dx**2 *
                    (un[1:-1, 2:] - 2 * un[1:-1, 1:-1] + un[1:-1, 0:-2]) +
                     dt / dy**2 *
                    (un[2:, 1:-1] - 2 * un[1:-1, 1:-1] + un[0:-2, 1:-1])))

    # Atualiza V (Velocidade Y)
    v[1:-1, 1:-1] = (vn[1:-1, 1:-1] -
                     un[1:-1, 1:-1] * dt / dx *
                    (vn[1:-1, 1:-1] - vn[1:-1, 0:-2]) -
                     vn[1:-1, 1:-1] * dt / dy *
                    (vn[1:-1, 1:-1] - vn[0:-2, 1:-1]) -
                     dt / (2 * rho * dy) * (p[2:, 1:-1] - p[0:-2, 1:-1]) +
                     nu * (dt / dy**2 *
                    (vn[2:, 1:-1] - 2 * vn[1:-1, 1:-1] + vn[0:-2, 1:-1]) +
                     dt / dx**2 *
                    (vn[1:-1, 2:] - 2 * vn[1:-1, 1:-1] + vn[1:-1, 0:-2])))

    # --- 4. CONDI√á√ïES DE CONTORNO F√çSICAS ---
    # Entrada (Vento constante na esquerda)
    u[:, 0] = 1
    v[:, 0] = 0
    
    # Sa√≠da (Livre)
    u[:, -1] = u[:, -2]
    v[:, -1] = v[:, -2]
    
    # Paredes (Cima e Baixo - No Slip)
    u[0, :]  = 0
    u[-1, :] = 0
    v[0, :]  = 0
    v[-1, :] = 0
    
    # OBST√ÅCULO (Um quadrado no meio do fluxo)
    # Definindo a regi√£o do obst√°culo (X: 30-40, Y: 15-25)
    u[15:25, 30:40] = 0
    v[15:25, 30:40] = 0

# --- 4. VISUALIZA√á√ÉO DOS RESULTADOS ---
print("‚úÖ Simula√ß√£o Conclu√≠da. Gerando visualiza√ß√£o do campo de velocidade...")

plt.figure(figsize=(11, 7), dpi=100)
# Mostra a magnitude da velocidade (Pit√°goras de U e V)
magnitude = np.sqrt(u**2 + v**2)

# Heatmap da velocidade
plt.contourf(np.linspace(0, 2, nx), np.linspace(0, 2, ny), magnitude, cmap='jet', levels=20)
plt.colorbar(label='Magnitude da Velocidade (m/s)')

# Streamplot (Linhas de corrente - O Santo Graal da Visualiza√ß√£o de Fluidos)
# Isso mostra os v√≥rtices girando!
plt.streamplot(np.linspace(0, 2, nx), np.linspace(0, 2, ny), u, v, color='k', density=1.5, linewidth=0.5, arrowsize=1)

# Desenha o obst√°culo
plt.fill_between([30*dx, 40*dx], 15*dy, 25*dy, color='gray')

plt.title("Simula√ß√£o Navier-Stokes 2D: Fluxo em Canal com Obst√°culo", fontsize=14)
plt.xlabel("X (m)")
plt.ylabel("Y (m)")

plt.savefig("Navier_Stokes_ETH.png")
plt.show()
